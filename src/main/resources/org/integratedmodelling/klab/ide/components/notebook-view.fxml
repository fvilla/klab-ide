<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<fx:root type="javafx.scene.layout.BorderPane" xmlns="http://javafx.com/javafx/17.0.12"
         xmlns:fx="http://javafx.com/fxml/1">
    <bottom>
        <TextField id="inputBox" BorderPane.alignment="CENTER" styleClass="rounded"
                   promptText="Enter a command; 'help' for assistance">
            <BorderPane.margin>
                <Insets bottom="10.0" left="20.0" right="20.0" top="10.0"/>
            </BorderPane.margin>
        </TextField>
    </bottom>
    <center>
        <ScrollPane prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <content>
                <VBox fx:id="notebook"/>
            </content>
        </ScrollPane>
    </center>
</fx:root>
